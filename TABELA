CREATE TABLE CLIENTE (
    id_cliente INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT,
    pnome TEXT,
    cep TEXT,
	rg TEXT
);

CREATE TABLE PRODUTO	 (
    id_produto INTEGER PRIMARY KEY AUTOINCREMENT,
    nome_produto TEXT,
    preco  REAL, 
	quantidade INTEGER
);

CREATE TABLE PAGAMENTO (
    id_pagamento  INTEGER PRIMARY KEY AUTOINCREMENT,
    forma_de_pagamento TEXT
);



## TABELA CHAVE ESTRANGEIRA PEGANDO AS INFORMAÇÕES DAS OUTRAS TABELA
SELECT
    pedidos.id_pedido AS NUMERO_PEDIDO,
    clientes.nome AS CLIENTE,
    produtos.nome AS PRODUTO,
    produtos.preco AS PREÇO,
    pedidos.quantidade AS QUANTIDADE,
    pedidos.data_pedido AS DATA,
    pagamento.forma_pagamento AS PAGAMENTO
FROM pedidos
JOIN clientes ON pedidos.id_cliente = clientes.id_cliente
JOIN produtos ON pedidos.id_produto = produtos.id_produto
JOIN pagamento ON pedidos.id_pagamento = pagamento.id_pagamento
ORDER BY pedidos.id_pedido;



