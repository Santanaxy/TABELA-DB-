SELECT *
FROM PAGAMENTO pg
JOIN CLIENTE c ON pg.id_cliente = c.id_cliente
JOIN PEDIDO pd ON pg.id_pedido = pd.id_pedido
JOIN PRODUTO pr ON pg.id_produto = pr.id_produto;
  

